generator client {
  provider        = "prisma-client-js"
  output          = "./dist"
  previewFeatures = ["relationJoins"]
}

generator pothos {
  provider     = "prisma-pothos-types"
  clientOutput = "./dist"
  output       = "./pothos-types.ts"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  Patient
  Doctor
}

model User {
  id             String          @id @default(uuid())
  email          String
  name           String?
  privyDid       String          @unique
  role           UserRole
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  authTokens     AuthToken[]
  patientFiles   PatientFile[]
  patients       PatientDoctor[] @relation("patient")
  doctors        PatientDoctor[] @relation("doctor")
  patientStorage PatientStorage?
}

model AuthToken {
  id           Int      @id @default(autoincrement())
  authToken    String   @unique
  refreshToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model PatientFile {
  id         String   @id @default(uuid())
  ipfsCid    String
  bucketName String
  fileName   String
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model PatientDoctor {
  id        Int      @id @default(autoincrement())
  patientId String
  doctorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  patient   User     @relation(fields: [patientId], references: [id], name: "patient")
  doctor    User     @relation(fields: [doctorId], references: [id], name: "doctor")

  @@unique([patientId, doctorId])
}

model PatientStorage {
  id        Int      @id @default(autoincrement())
  patientId String   @unique
  patient   User     @relation(fields: [patientId], references: [id])
  maxSpace  Float
  usedSpace Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


